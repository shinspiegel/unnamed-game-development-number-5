{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "/Applications/Godot_mono.app/Contents/MacOS/Godot",
			"type": "process",
			"args": [
				"--build-solutions",
				"--path",
				"${workspaceRoot}",
				"--no-window",
				"-q"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build-solutions",
			"group": "test",
			"command": "dotnet restore; ${env:GODOT4} --headless --build-solutions --quit || exit 0",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
	]
}